<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controllers.MainController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <ImageView id="cameraView" fx:id="cameraView" fitHeight="200.0" fitWidth="260.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView id="captureView" fx:id="captureView" fitHeight="200.0" fitWidth="253.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView id="calibrateButton" fitHeight="200.0" fitWidth="253.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextArea prefHeight="164.0" prefWidth="293.0" />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button id="nextMoveButton" fx:id="nextMoveButton" mnemonicParsing="false" prefHeight="12.0" prefWidth="298.0" text="Next Move" />
                  <Button fx:id="startCameraButton" mnemonicParsing="false" onAction="#startCamera" prefHeight="12.0" prefWidth="299.0" text="Start Camera" />
                  <Button fx:id="calibrateButton" mnemonicParsing="false" onAction="#calibrate" prefHeight="27.0" prefWidth="100.0" text="Calibrate" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <ImageView id="checkersBoardView" fx:id="checkersBoardView" depthTest="DISABLE" fitHeight="235.0" fitWidth="429.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../checkersboard.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
   </children>
</VBox>
